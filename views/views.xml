<odoo>
   <data>
      <template id='show_current_stock'>
         <title>Current Inventory</title>
				<h3> Product List - Current Status of Inventory</h3>
				<button id='print'> Print Variant Report </button>
				<table class='table'>
					<thead>
						<!-- <th>Test_PTI</th> -->
						<th>#</th>
						<th>Def_Name</th>
						<th>Int_Ref</th>
						<th>Disp_Name</th>
						<th>PCAT_Name</th>
						<th>PCAT_DName</th>
						<!-- <th>PATTRLN_ID</th> -->
						<!-- <th>PATTRLN_NAME</th> -->
						<th>Qty</th>
						<th>Sale </th>
						<th>LOC_ID</th>
						<th>PT_ID</th>
						<th>PT_Name</th>
						<th>PATTRLN_ID</th>
						<th>PATTRLN_IDName</th>
						<th>PATTRV_ID</th>
						<th>PATTRV_IDName</th>
					</thead>
					<tbody>
						<t t-set='count' t-value='1'/>
						<tr t-foreach='current_stock' t-as='current_product'>
							<!-- <td> <t t-esc='current_product.product_template_id_cust'/> </td> -->
							<td> <t t-esc='count'/> <t t-set='count' t-value='count+1'/> </td>
							<td> <t t-esc='current_product.product_id.name'/> </td>
							<td> <t t-esc='current_product.product_id.default_code'/> </td>
							<td> <t t-esc='current_product.product_id.display_name'/> </td>
							<td> <t t-esc='current_product.product_id.categ_id.name'/> </td>
							<td> <t t-esc='current_product.product_id.categ_id.display_name'/> </td>
							<!-- <td> <t t-esc='current_product.product_attribute_line_id'/> </td> -->
							<!-- <td> <t t-esc='current_product.product_attribute_line_id.name'/> </td> -->
							<td> <t t-esc='current_product.qty'/> </td>
							<td> <t t-esc='current_product.product_id.list_price'/> </td>
							<td> <t t-esc='current_product.location_id.name'/> </td>
							<td> <t t-esc='current_product.product_template_id'/> </td>
							<td> <t t-esc='current_product.product_template_id_name'/></td>
							<td> <t t-esc='current_product.product_attribute_id'/></td>
							<td> <t t-esc='current_product.product_attribute_id_name'/></td>
							<td> <t t-esc='current_product.product_attribute_value_id'/></td>
							<td> <t t-esc='current_product.product_attribute_value_id_name'/></td>

						</tr>
						<!-- 
						<tr>
							<td> Sth </td>
							<td> <t t-esc='first_record.product_id.name'/> </td>
							<td> <t t-esc='first_record.product_id.default_code'/> </td>
							<td> <t t-esc='first_record.product_id.display_name'/> </td>
							<td> <t t-esc='first_record.product_id.categ_id.name'/> </td>
							<td> <t t-esc='first_record.product_id.categ_id.display_name'/> </td>
							<td> <t t-esc='first_record.product_attribute_line_id'/> </td>
							<td> <t t-esc='first_record.qty'/> </td>
							<td> <t t-esc='first_record.product_id.list_price'/> </td>
							<td> <t t-esc='first_record.location_id.name'/> </td>
							<td> <t t-esc='first_record.product_template_id.id'/> </td>
							<td> <t t-esc='first_record.product_template_id.name'/></td>
							<td> <t t-esc='first_record.product_template_id.categ_id.id'/></td>
						</tr> -->


					</tbody>
				</table>

				<div style='font:10px'>
					<p t-foreach='current_stock' t-as='current_product'>
						<t t-foreach="current_product._fields" t-as="field"> 
              			<strong> <span t-esc="field"/> </strong> <span t-esc='current_product[field]'/>
						</t>
					</p>
				</div>
		</template>
	</data>
</odoo>

