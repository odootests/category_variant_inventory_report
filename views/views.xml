<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id='show_current_stock'>
			<t name='Current Inventory' >
				<t t-call='website.layout'>
					<t t-set='title'>Current Inventory Raw</t>
					<div class='oe_structure'>
						<div class='container'>
							<h3> Product List - Current Status of Inventory</h3>			 
							<table >
								<thead>
									<th>#</th>
									<th>Prod Tmpl_ID</th>
									<th>Prod Temp_Name</th>
									<th>Prod Attr_ID</th>
									<th>Prod Attr_Name</th>
									<th>Prod Categ_ID</th>
									<th>Prod Categ_Name</th>
									<th>Prod AttrVal_ID</th>
									<th>Prod AttrVal_Name</th>
									<th>Prod ActQty</th>
								</thead>
								<tbody>
									<t t-set='count' t-value='1'/>
									<tr t-foreach='current_stock' t-as='current_product'>
										<td> <t t-esc='count'/> <t t-set='count' t-value='count+1'/> </td>
										<td> <t t-esc='current_product.product_template_id'/> </td>
										<td> <t t-esc='current_product.product_template_name'/></td>
										<td> <t t-esc='current_product.product_category_id'/></td>
										<td> <t t-esc='current_product.product_category_name'/></td>
										<td> <t t-esc='current_product.product_attribute_id'/></td>
										<td> <t t-esc='current_product.product_attribute_name'/></td>
										<td> <t t-esc='current_product.product_attribute_value_id'/></td>
										<td> <t t-esc='current_product.product_attribute_value_name'/></td>
										<td> <t t-esc='current_product.actual_qty'/></td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</t>
			</t>
		</template>

		<template name='Current Inventory' id='inventory_current_stock'>
			<t t-call='website.layout'>
				<t t-set='title'>Current Inventory</t>
				<div class='oe_structure'>
					<div class='container'>
						
						<link rel='stylesheet' href='https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css' />
            		<script type="text/javascript" src='https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js'></script>
            		<script type="text/javascript" src='https://cdn.datatables.net/buttons/1.5.1/js/dataTables.buttons.min.js'></script>
            		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
            		<script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js'></script>
            		<script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js'></script>
            		<script type="text/javascript" src='https://cdn.datatables.net/buttons/1.5.1/js/buttons.html5.min.js'></script>


						<h3 class='mt24 mb32'> Inventory at 
							<strong>	<t t-esc='current_date' /> </strong> </h3>			 
						<table class='table table-hover table-bordered' id='current_inventory_table'>
							<thead>
								<th>#</th>
								<th>Category</th>
								<th>Product</th>
								<t t-foreach='variantNameRecords' t-as='variantName'>
									<th> <t t-esc='variantName' /> </th>
								</t>
							</thead>
							<tbody>
								<t t-set='serial' t-value='1'/>
								<tr t-foreach='expectedOutput' t-as='item' >
									<td> <t t-esc='serial'/> <t t-set='serial' t-value='serial+1'/> </td>
									<t t-foreach='item' t-as='index'>
										<td> <strong> <t t-esc='index' /> </strong> </td>
									</t>
								</tr>
							</tbody>
						</table>
					</div>
					<script type='text/javascript'>
						$(document).ready(function(){
   						$('#current_inventory_table').DataTable( {
   							dom: 'Bfrtip',
    							buttons: [
        							'excelHtml5'
    							]
							});
							$('.dt-buttons button').addClass('btn btn-warning');
						});

					</script>
				</div>
			</t>
		</template>
	</data>
</odoo>

